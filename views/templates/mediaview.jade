- if (!_id)
  - var id= ''
- if (!description)
  - var description= 'Notes about this media'
- if(!picture)
  - var picture= 'pics/generic.jpg'

.row-fluid
  form.form-horizontal.span12
    fieldset
      legend Media Details
      br
      .row
          .span4
            .control-group
              label.control-label(for="medianame") name:
              .controls
                  input#medianame(name="name",type="text",value=name)
            - var items = ["id", "audio", "video"]
            each item in items
              .control-group
                label.control-label(for='media' + item) #{item} :
                .controls
                    input(id= 'media' + item, name=item,type="text",value=item,disabled)
                    span.help-inline
            .control-group
              label.control-label(for="description") Notes:
              .controls
                  textarea#description(name="description",style="width: 90%;",rows="6",placeholder=description)

          .span8
            .well.droparea.image-droparea(style="text-align: center;width:50%;margin: 0px auto;")
              p
                img#picture(width="100%",src=picture)
                .progress.progress-stripped
                  .bar(style="width: 0%;")
              p(style="color:#999;")
                | To add media, drag a new file from your file system onto this box.

    .form-actions
      a.btn.btn-primary.save(href="#") Save
      a.btn.delete(href="#") Delete

.row-fluid.status-bar
  .span12
    .alert.alert-success(style="display: none")
      b Success!
      | Media saved successfully
