block panel
 #Panel
    .logo
    #version-diff(style="display:none") 0
    #version-current(style="display:none") 2.2.1
    #version-latest(style="display:none") 2.2.1
    #version-link(style="display:none") http://airtime.sourcefabric.org
    #version-icon.uptodate
    #master-panel
      .now-playing-block
        .text-row
          strong Previous:
          span#previous
          span#prev-length
        .now-playing-info.song
          .time-flow
            span.time-elapsed#time-elapsed
            span.time-remaining#time-remaining
          span#current Current:
            span(style="color:red; font-weight:bold") Nothing Scheduled
          span.length#song-length
        .progressbar
          .progress-song#progress-bar(style="width:0%")
        .text-row.next-song
          strong Next:
          span#next
          span#next-length

      .show-block
        .text-row
        .now-playing-info.show
          .recording-show(style="display: none;")
          span#playlist Current Show:
          span#show-length.show-length
        .progressbar
          .progress-show-error#progress-show(style="width:0%")


      .source-info-block
        h3 Source Streams
        ul
            li
              #master_dj_div.source-label
                a#master_dj.source-kick-button(onclick="kickSource(this)").
                | Master Source
              .line-to-switch.off
              a#master_dj.source-switch-button(href="#", onclick="setSwitchListener(this);")
                span off
              .line-to-on-air.off
            li
              #live_dj_div.source-label
                a#live_dj.source-kick-button(onclick="kickSource(this)").
                | Show Source
              .line-to-switch.off
              a#live_dj.source-switch-button(href="#", onclick="setSwitchListener(this);")
                span off
              .line-to-on-air.off
            li
              #scheduled_play_div.source-label Scheduled Play
              .line-to-switch.off
              a#scheduled_play.source-switch-button.active(href="#", onclick="setSwitchListener(this);")
                span on
              .line-to-on-air.off

      .on-air-block
        h3
        .on-air-info.off#on-air-info ON AIR
        a.listen-control-button(href="#")
          span Listen

      .time-info-block.pull-right
        ul
          li Station time
          li.time#time 05:41:29
          li.time-zone
            span#time-zone UTC
    #jquery_jplayer_1.jp-jplayer(style="width:0px; height:0px;")
    .personal-block.solo
      ul
        li
          span.name admin.
          |
          a(href="/Login/logout")Logout
    ul#nav
            li.top.list-menu
              a.top_link(href="#media")
                i.icon-list.icon-white
                span=i18n.gettext('Browse Medias')
            li.top.edit-menu
              a.top_link(href="#media/edit")
                i.icon-edit.icon-white
                span= i18n.gettext('Edit Playlists')
            li.top.add-menu
              a.top_link(href="#media/add")
                i.icon-plus.icon-white
                span= i18n.gettext('Add Medias')
            li.top.schedule-menu
              a.top_link(href="#schedule")
                i.icon-globe.icon-white
                span= i18n.gettext('Schedule')
            li.top.conf-menu
              a.top_link(href="#admin")
                i.icon-wrench.icon-white
                span= i18n.gettext('Configure')
